[codespell]
check-filenames =
check-hidden =
# Disable warnings about binary files
quiet-level = 2
builtin = clear,rare,en-GB_to_en-US

# Skip paths matching fnmatch glob patterns.
skip =
  .git,
  .typos.toml,
  build,
  CONTRIBUTORS.rst,
  CTestCustom.cmake.in,
  Modules/Internal/CPack/NSIS.template.in,
  Source/CursesDialog/form/*,
  Source/kwsys/*,
  Tests/RunCMake/CPack/tests/DMG_SLA/German.*,
  Tests/RunCMake/ParseImplicitData/*.input,
  Tests/StringFileTest/test.utf8,
  Utilities/cm*,
  *.pfx,

# noqa: spellcheck off
ignore-words-list =
  abd,
  aci,
  ags,
  ake,
  ans,
  ba,
  ccompiler,
  cconfiguration,
  certi,
  conly,
  copyin,
  dependees,
  dne,
  dum,
  earch,
  ect,
  filetest,
  fo,
  helpfull,
  hiden,
  isnt,
  keypair,
  nd,
  ned,
  nin,
  nknown,
  ot,
  pard,
  sectionin,
  seh,
  ser,
  te,
  upto,
  varn,
  vas,
  wee,
# noqa: spellcheck on
